{
  "manifest_version": 2,
  "name": "Fintual",
  "description": "Es una extensi√≥n de Chrome para que los empleados de Fintual pudieran solicitar con solo 1 clic cambiar de sus turnos de chat de soporte.",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icons/fintualist-iso.png"
  },
  "icons": {
    "16": "icons/fintualist-iso.png",
    "48": "icons/fintualist-iso.png",
    "128": "icons/fintualist-iso.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "matches": [
        "https://calendar.google.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "permissions": [
    "storage"
  ]
}
